{
    "name": "xiaodi/think-pinyin",
    "description": "Chinese to Pinyin translator for ThinkPHP",
    "license": "MIT",
    "authors": [
        {
            "name": "xiaodi",
            "email": "saybabi@163.com"
        }
    ],
    "keywords": [
        "thinkphp",
        "pinyin",
        "chinese"
    ],
    "require": {
        "overtrue/pinyin": "~4.0"
    },
    "autoload": {
        "psr-4": {
            "xiaodi\\ThinkPinyin\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "extra": {
        "think": {
            "services": [
                "xiaodi\\ThinkPinyin\\PinyinService"
            ]
        }
    }
}
